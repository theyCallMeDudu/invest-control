{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/var/www": "${workspaceFolder}/ic-backend"
      },
      "log": true,
      "xdebugSettings": {
        "max_children": 256,
        "max_data": 10240,
        "show_hidden": 1
      }
    }
  ]
}